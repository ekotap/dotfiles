set nocompatible
filetype plugin indent on

noremap j gj
nnoremap k gk

set incsearch
set ignorecase
set smartcase
set hlsearch
nnoremap <ESC><ESC> :nohl<RETURN>

set expandtab
set shiftwidth=2
set tabstop=2
set autoindent
set visualbell
set nu

let g:netrw_banner = 0
let g:netrw_liststyle=3
let g:netrw_sizestyle="H"
